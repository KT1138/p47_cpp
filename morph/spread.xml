<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="topshot">
 <fire>
  <direction type="relative">0</direction>
  <speed type="relative">-0.2</speed>
  <bullet/>
 </fire>
 <repeat> <times>1+$rank*1.6</times>
 <action>
  <fire>
   <direction type="sequence">76-$rank*26</direction>
   <speed type="sequence">0.2</speed>
   <bullet/>
  </fire>
 </action>
 </repeat>
 <fire>
  <direction type="relative">-76+$rank*26</direction>
  <speed type="relative">0</speed>
  <bullet/>
 </fire>
 <repeat> <times>$rank*1.6</times>
 <action>
  <fire>
   <direction type="sequence">-76+$rank*26</direction>
   <speed type="sequence">0.2</speed>
   <bullet/>
  </fire>
 </action>
 </repeat>
 <vanish/>
</action>

</bulletml>
